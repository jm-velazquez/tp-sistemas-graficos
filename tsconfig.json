{
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "module": "es2015",
        "target": "ES2017",
        "allowJs": true,
        "outDir": "./dist"
    },
    "include": ["src/**/*.ts", "src/main.js"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
